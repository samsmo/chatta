extends ../layout
block content
	.container
		.row
			.span4.offset4.well
				legend
					h1=title
				form(action='/playlists/create', method='post')
					fieldset
							input(type="text", value="", placeholder="Title", name="title", class="span4")
							input(type="text", value="", placeholder="Song Name", name="song", class="span4")
							div.well.well-large.songs
							input(type="text", value="", placeholder="Tags?", class="span4", id="tagCheck")
							div.well.well-small.tags
							input(type="hidden", value="", name="tags", id="tags")
							input(type='submit',value='Create Playlist!',data-transition='fade', data-theme='c', class="btn btn-info btn-block")